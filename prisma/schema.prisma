generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id         String   @id @db.VarChar(36)
  username   String   @unique @db.VarChar(80)
  password   String   @db.Text
  group_id   Int
  created_at DateTime @default(now()) @db.DateTime(0)
  update_at  DateTime @default(now()) @db.DateTime(0)
}

model groups {
  id          Int      @id @default(autoincrement())
  name        String   @unique @db.VarChar(512)
  permissions Json
  created_at  DateTime @default(now()) @db.DateTime(0)
  update_at   DateTime @default(now()) @db.DateTime(0)
}

model authorization_clients {
  id            String    @id
  client_name   String    @db.VarChar(80)
  client_id     String    @unique @db.VarChar(36)
  client_secret String    @db.Text
  scope         String    @default("all")
  developer_id  String
  avatar        String    @default("https://th.bing.com/th/id/OIP.FZcmYQE0Ghe7D5_gM69olQHaH9?pid=ImgDet&rs=1")
  created_at    DateTime  @default(now()) @db.DateTime(0)
  updated_at    DateTime  @default(now()) @db.DateTime(0)
}

model authorization_codes {
  id            String    @id
  code          String    @unique @db.VarChar(512)
  uid           String    @db.VarChar(36)
  client_id     String    @db.VarChar(36)
  created_at    DateTime  @default(now()) @db.DateTime(0)
  updated_at    DateTime  @default(now()) @db.DateTime(0)
}
